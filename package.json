{
  "name": "typesafe-actions",
  "version": "2.0.0-1",
  "description":
    "Typesafe Action Creators for Redux / Flux Architectures (in TypeScript)",
  "author":
    "Piotr Witek <piotrek.witek@gmail.com> (http://piotrwitek.github.io)",
  "repository": "https://github.com/piotrwitek/typesafe-actions",
  "homepage": "https://github.com/piotrwitek/typesafe-actions",
  "license": "MIT",
  "types": "dist/cjs/index.d.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "jsnext:main": "dist/jsnext/index.js",
  "engines": {
    "node": ">= 4"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules/ && npm install",
    "clean": "rm -rf dist/",
    "tsc": "tsc -p . --noEmit",
    "tsc:watch": "tsc -p . --noEmit -w",
    "build": "npm run build:cjs & npm run build:esm & npm run build:jsnext",
    "build:cjs": "rm -rf dist/cjs/ && tsc -p . --outFile dist/cjs/index.js",
    "build:esm": "rm -rf dist/esm/ && tsc -p . --outDir dist/esm/ -m 'ES2015'",
    "build:jsnext":
      "rm -rf dist/jsnext/ && tsc -p . --outDir dist/jsnext/ -t 'ES2015'",
    "prelint": "prettier --write 'src/**/*'",
    "lint": "tslint --project './tsconfig.json'",
    "pretest": "tsc -p ./tsconfig.spec.json --noEmit",
    "test": "jest --config jest.config.json ./src",
    "test:watch": "jest --config jest.config.json ./src --watch",
    "precommit": "npm run lint",
    "prepush": "npm run test",
    "prepublishOnly":
      "npm run clean && npm run reinstall && npm run lint && npm run tsc && npm run test && npm run build"
  },
  "dependencies": {
    "tslib": "1.9.0"
  },
  "devDependencies": {
    "@types/jest": "22.2.3",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "prettier": "1.12.1",
    "redux": "4.0.0",
    "ts-jest": "22.4.4",
    "tslint": "5.9.1",
    "typescript": "2.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": true
  },
  "keywords": [
    "typescript",
    "typesafe",
    "actions",
    "action-creators",
    "redux",
    "flux",
    "redux-actions",
    "static-typing"
  ]
}
